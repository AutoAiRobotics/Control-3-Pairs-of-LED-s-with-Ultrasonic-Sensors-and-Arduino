int ledPin11 = 7;
int ledPin21 = 5;
int ledPin31 = 2;

int trigPin1 = 13;
int echoPin1 = 12;

int trigPin2 = 11;
int echoPin2 = 10;

int trigPin3 = 9;
int echoPin3 = 8;

void setup() {
  Serial.begin (9600);
  pinMode(trigPin1, OUTPUT);
  pinMode(echoPin1, INPUT);

  pinMode(trigPin2, OUTPUT);
  pinMode(echoPin2, INPUT);

  pinMode(trigPin3, OUTPUT);
  pinMode(echoPin3, INPUT);

  pinMode(ledPin11, OUTPUT);
  pinMode(ledPin21, OUTPUT);
  pinMode(ledPin31, OUTPUT);
}

void firstsensor() { // This function is for first sensor.
  int duration1, distance1;
  digitalWrite (trigPin1, HIGH);
  delayMicroseconds (1);
  digitalWrite (trigPin1, LOW);
  duration1 = pulseIn (echoPin1, HIGH);
  distance1 = (duration1 / 2) / 29.1;

  Serial.print("1st Sensor: ");
  Serial.print(distance1);
  Serial.print("cm    ");

  if (distance1 < 70) {  // LED ON/OFF at this distance
    digitalWrite (ledPin11, HIGH);
  } else {
    digitalWrite (ledPin11, LOW);
  }
}
void secondsensor() { // This function is for second sensor.
  int duration2, distance2;
  digitalWrite (trigPin2, HIGH);
  delayMicroseconds (1);
  digitalWrite (trigPin2, LOW);
  duration2 = pulseIn (echoPin2, HIGH);
  distance2 = (duration2 / 2) / 29.1;

  Serial.print("2nd Sensor: ");
  Serial.print(distance2);
  Serial.print("cm    ");

  if (distance2 < 70) {  // LED ON/OFF at this distance
    digitalWrite (ledPin21, HIGH);
  }
  else {
    digitalWrite (ledPin21, LOW);
  }
}
void thirdsensor() { // This function is for third sensor.
  int duration3, distance3;
  digitalWrite (trigPin3, HIGH);
  delayMicroseconds (1);
  digitalWrite (trigPin3, LOW);
  duration3 = pulseIn (echoPin3, HIGH);
  distance3 = (duration3 / 2) / 29.1;

  Serial.print("3rd Sensor: ");
  Serial.print(distance3);
  Serial.print("cm");

  if (distance3 < 70) {  // LED ON/OFF at this distance
    digitalWrite (ledPin31, HIGH);
  }
  else {
    digitalWrite (ledPin31, LOW);
  }
}

void loop() {
  Serial.println("\n");
  firstsensor();
  //secondsensor();//removed this line for the robot I built in NC which only has sensors 1 and 3(left and right)
  thirdsensor();
  //delay(3);//this speeds the response up a little bit
}
